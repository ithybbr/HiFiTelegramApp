@model IEnumerable<AudioModel>
@{
    ViewData["Title"] = "Downloads";
}
<div class="text-center">
    <h1 class="display-4">Downloads</h1>
</div>
<div class="text-center">
    <ul class="list-group">
        @foreach (var audio in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div class="audio-data-@audio.Id" onclick='audioPlayer(@Html.Raw(Json.Serialize(audio)))'>
					@audio.Artist - @audio.Name
                </div>
                <div class="d-flex gap-2">
                    <form method="post"
                          data-ajax="true" data-ajax-method="post"
                          action="@Url.Action("AddToFavoriteSongs", "Favorite", new { artist = audio.Artist, name = audio.Name, songId = audio.SongId})">
                        <button type="submit" class="btn btn-light">Add to favorites</button>
                    </form>
                    <form method="post"
                          data-ajax="true" data-ajax-method="post" data-ajax-loading="#delete-result"
                          action="@Url.Action("RemoveFromFavoriteSongs", "Favorite", new { artist = audio.Artist, songId = audio.SongId})">
                        <input type="hidden" value="@audio.Name"/>
                        <button type="submit" class="btn btn-light">Remove from favorites</button>
                    </form>
                    <form method="post"
						data-ajax="true" data-ajax-method="post" data-ajax-loading="#delete-result"
						  action="@Url.Action("DeleteSong", "Download", new {songId = audio.SongId, path = audio.Path })">
                        <button type="submit" class="btn btn-light">Delete</button>
                    </form>
                </div>
            </li>
        }
    </ul>
</div>