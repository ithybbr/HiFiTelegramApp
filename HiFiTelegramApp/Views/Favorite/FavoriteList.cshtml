@model IEnumerable<FavoriteModel>
@foreach (var entry in Model)
{
    <li class="list-group-item d-flex justify-content-between align-items-center">
        <a class="link" data-url="@Url.Action("Artist", "Home", new { artist = entry.Artist })">@entry.Artist</a>
        <div class="d-flex gap-2">
            <form method="post"
				  data-ajax="true" data-ajax-method="post" data-ajax-loading="#delete-result" data-ajax-update=".list-group"
                  action="@Url.Action("RemoveFromFavoriteArtists", "Favorite", new { artist = entry.Artist})">
                <button type="submit" class="btn btn-light">Remove from favorites</button>
            </form>
        </div>
        @foreach (var song in entry.Songs)
        {
            <div>@song.Name</div>
            <div>@song.SongId</div>
            <form method="post"
                  data-ajax="true" data-ajax-method="post" data-ajax-loading="#delete-result" data-ajax-update=".list-group"
                  action="@Url.Action("RemoveFromFavoriteSongs", "Favorite", new { artist = song.Artist, songId = song.SongId})">
                <input type="hidden" value="@song.Name" />
                <button type="submit" class="btn btn-light">Remove from favorites</button>
            </form>
        }
    </li>
}