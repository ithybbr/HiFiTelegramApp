@model IEnumerable<string>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome home</h1>
    <ul class="list-group">
        @foreach (var artist in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a asp-controller="Home" asp-action="Artist" asp-route-artist="@artist">@artist</a>
                <div class="d-flex gap-2">
                    <form asp-controller="Favorite" asp-action="AddToFavoriteArtists" asp-route-artist="@artist">
                        <button type="submit" class="btn btn-light">Add to favorites</button>
                    </form>
                </div>
            </li>
        }
    </ul>
</div>