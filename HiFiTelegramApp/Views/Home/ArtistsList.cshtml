@model IEnumerable<string>

@foreach (var artist in Model)
{
    <li class="list-group-item d-flex justify-content-between align-items-center">
        <a class="link" data-url="@Url.Action("Artist", "Home", new { artist = artist })">@artist</a>
        <div class="d-flex gap-2">
            <form asp-controller="Favorite" asp-action="AddToFavoriteArtists" asp-route-artist="@artist">
                <button type="submit" class="btn btn-light">Add to favorites</button>
            </form>
        </div>
    </li>
}