@model IEnumerable<SongModel>

@{
    ViewData["Title"] = "Artist Page";
}

<div class="text-center">
    <h1 class="display-4">Artist</h1>
    <ul class="list-group">
        @foreach (var song in Model)
        {
            <li class="list-group-item">
                <a asp-controller="Home" asp-action="Artist" asp-route-name="@song.SongId">@song.Name</a>
                <a asp-controller="Favorite" asp-action="AddToFavoriteArtists" asp-route-name="@song.Artist">Add to favorites</a>
                <a asp-controller="Favorite" asp-action="RemoveFromFavoriteArtists" asp-route-name="remove/@song.Artist">Remove from favorites</a>
            </li>
        }
    </ul>
</div>